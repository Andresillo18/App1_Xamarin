<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.StackLayoutPractica1" BackgroundColor="#16293c">
             <!--Se agrega las propiedades al ContentPage para que se cambie en general-->
    <StackLayout Spacing="20" VerticalOptions="Center">
        <Label Text="Bienvenidos a este Código" 
               TextColor="Wheat"
               HorizontalOptions="Center"
               FontSize="22"
               FontAttributes="Bold"></Label>

        <Label Text="Aprender a programar no fue tan sencillo"
               TextColor="White"
               HorizontalOptions="Center"
               FontSize="18"></Label>
        
        <Button Text="Login" 
                Background="#f03861"
                TextColor="White" 
                Margin="30,0"></Button>
        
        <Button Text="Registrar" 
                Background="#f03861"
                TextColor="White" 
                Margin="30,0"></Button>
    </StackLayout>
</ContentPage>